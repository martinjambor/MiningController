<Window x:Class="Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Desktop"
        mc:Ignorable="d"
        Title="MainWindow" Height="200" Width="550">
    <Grid DataContext="MainModelViewModel">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"></ColumnDefinition>
            <ColumnDefinition Width="400"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>            
        </Grid.RowDefinitions>
        <TextBlock Margin="10" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" FontWeight="Black">Mining wallet settings</TextBlock>
        <TextBlock Margin="10" Grid.Column="0" Grid.Row="1" >Wallet: </TextBlock>
        <TextBox Margin="10" Grid.Column="1" Grid.Row="1" Name="Wallet"></TextBox>

        <Button Margin="10" Name="Save" Content="Save" Grid.Column="2" Grid.Row="3" Command="" Click="Save_Click"></Button>
    </Grid>
</Window>
